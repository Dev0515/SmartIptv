<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:id="@+id/line"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:background="@color/white"></View>-->
</LinearLayout>

