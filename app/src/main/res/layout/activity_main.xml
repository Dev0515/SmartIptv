<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:fillViewport="true">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/backk"
		android:orientation="vertical"
		tools:context=".Activity.Testingg">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_margin="5dp"
		android:weightSum="3">

	<ImageView
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:src="@drawable/logo" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_weight="1"
		android:text="6:15PM"
		android:textColor="#FFF"
		android:layout_marginLeft="20dp"
		android:textSize="8pt"
		android:textStyle="bold" />

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:tint="@color/white"
		android:layout_weight="1"
		android:layout_gravity="center"
		app:srcCompat="@drawable/ic_switch" />
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_gravity="center"
		android:tint="@color/white"
		app:srcCompat="@drawable/ic_settings_black_24dp" />
	<ImageView
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_margin="10dp"
		android:layout_weight="1"
		android:layout_gravity="center"
		android:tint="@color/white"
		app:srcCompat="@drawable/ic_call_center_worker_with_headset" />
	</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<androidx.cardview.widget.CardView
				android:id="@+id/cardView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:background="@android:color/white"
				app:cardCornerRadius="5dp"
				app:cardElevation="20dp">


				<ImageView
					android:id="@+id/img"
					android:layout_width="200dp"
					android:layout_height="290dp"
					android:scaleType="centerCrop"
					android:src="@drawable/ff" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:orientation="vertical">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/transparent_card"
						android:orientation="vertical">

						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:tint="@color/white"
							app:srcCompat="@drawable/ic_film" />

						<TextView
							android:id="@+id/streamtype"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Series"
							android:textColor="#FFF"
							android:textSize="20sp"
							android:textStyle="bold" />
					</LinearLayout>

				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<androidx.cardview.widget.CardView

					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@android:color/white"
					app:cardCornerRadius="5dp"
					android:layout_margin="10dp"
					app:cardElevation="20dp">


					<ImageView
					android:id="@+id/ff"
					android:layout_width="match_parent"
					android:layout_height="150dp"
					android:scaleType="centerCrop"
					android:src="@drawable/movies"

					/>



					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:orientation="vertical">


						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/transparent_card"
							android:orientation="vertical"
							>

							<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:tint="@color/white"
							app:srcCompat="@drawable/ic_video_camera"/>

							<TextView
								android:id="@+id/e"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Movies"
								android:textColor="#FFF"
								android:textSize="20sp"
								android:textStyle="bold" />
						</LinearLayout>

					</LinearLayout>


				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView

					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@android:color/white"
					android:layout_margin="10dp"
					app:cardCornerRadius="5dp"
					android:id="@+id/livetvcard"
					app:cardElevation="20dp">


					<ImageView

						android:layout_width="match_parent"
						android:layout_height="120dp"
						android:scaleType="centerCrop"
						android:src="@drawable/livetv"

						/>



					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:orientation="vertical">


						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/transparent_card"
							android:orientation="vertical"
							>

							<ImageView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:tint="@color/white"
								app:srcCompat="@drawable/ic_live_streaming" />
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textColor="#FFF"
								android:text="Livetv"
								android:textStyle="bold"
								android:textSize="20sp"
								/>
						</LinearLayout>

					</LinearLayout>


				</androidx.cardview.widget.CardView>
			</LinearLayout>
		</LinearLayout>
		<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			app:cardCornerRadius="5dp"
			android:layout_height="50dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginTop="10dp"
			android:background="#DF4E3F">
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:background="#DF4E3F">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#FFF"
					android:textSize="10pt"
					android:gravity="center"
					android:id="@+id/text"
					android:layout_centerInParent="true"
					android:text="Install EPG"/>
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:tint="@color/white"
					android:gravity="center"
					android:layout_margin="10dp"
					android:layout_centerInParent="true"
					android:layout_toLeftOf="@+id/text"
					app:srcCompat="@drawable/ic_text_document_information__white"
					/>
			</RelativeLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			app:cardCornerRadius="5dp"
			android:layout_height="50dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginTop="15dp"
			android:id="@+id/account"
			android:background="#EEB442">
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:background="#EEB442">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#FFF"
					android:textSize="10pt"
					android:gravity="center"
					android:id="@+id/text1"
					android:layout_centerInParent="true"
					android:text="Account"/>
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:tint="@color/white"
					android:gravity="center"
					android:layout_margin="10dp"
					android:layout_centerInParent="true"
					android:layout_toLeftOf="@+id/text1"
					android:src="@drawable/ic_user"
					/>
			</RelativeLayout>
		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			app:cardCornerRadius="5dp"
			android:layout_height="50dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			android:layout_marginTop="15dp"
			android:background="#58AB5B">
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:background="#58AB5B">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="#FFF"
					android:textSize="10pt"
					android:gravity="center"
					android:id="@+id/text6"
					android:layout_centerInParent="true"
					android:text="Catchup"/>
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:tint="@color/white"
					android:gravity="center"
					android:layout_margin="10dp"
					android:layout_centerInParent="true"
					android:layout_toLeftOf="@+id/text6"
					android:src="@drawable/ic_24_hours"
					/>
			</RelativeLayout>
		</androidx.cardview.widget.CardView>





		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/cal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:tint="#EEB442"
				android:layout_margin="5dp"
				android:src="@drawable/ic_calendar" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_toRightOf="@+id/cal"
				android:layout_margin="5dp"
				android:text="Expiration: Aug 7,2019 "
				android:textColor="#FFF"
				android:textSize="8pt"
				android:id="@+id/textt"
				android:textStyle="bold" />
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/textt"
				android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true"
				android:gravity="end"

				>

			<ImageView
				android:id="@+id/d"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:tint="#EEB442"
				android:layout_gravity="center"
				android:src="@drawable/ic_person_black_24dp" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"

				android:layout_gravity="center"
				android:layout_margin="5dp"
				android:layout_toRightOf="@+id/d"
				android:text="Username "
				android:textColor="#FFF"
				android:textSize="8pt"
				android:textStyle="bold" />
			</RelativeLayout>
		</RelativeLayout>

	</LinearLayout>
</ScrollView>
